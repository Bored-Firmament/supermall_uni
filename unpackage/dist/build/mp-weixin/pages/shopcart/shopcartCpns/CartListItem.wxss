.cart-list-item{display:flex;padding:5px;border-bottom:1px solid #ddd}.cart-list-item .product-check-box{width:40px;display:flex;justify-content:center;align-items:center}.cart-list-item .product-img{padding:5px}.cart-list-item .product-img image{width:70px;border-radius:5px;vertical-align:top}.cart-list-item .product-message{flex:1;padding:5px 10px;overflow:hidden;position:relative}.cart-list-item .product-message .product-title, .cart-list-item .product-message .product-desc{white-space:nowrap;overflow:hidden;text-overflow:ellipsis;width:100%;font-size:12px;height:20px;line-height:20px}.cart-list-item .product-message .product-title{color:#000}.cart-list-item .product-message .product-desc{color:var(--color-text)}.cart-list-item .product-message .product-bottom{position:absolute;bottom:0;left:10px;right:10px;margin-bottom:10px}.cart-list-item .product-message .product-bottom .product-price{float:left;font-size:12px;color:var(--color-high-text)}.cart-list-item .product-message .product-bottom .product-count{float:right;font-size:12px}