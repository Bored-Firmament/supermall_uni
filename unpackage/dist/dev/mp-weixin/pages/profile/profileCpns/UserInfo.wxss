}
.user-info .user-icon {
  width: 120rpx;
  height: 120rpx;
  background-color: #fff;
  border-radius: 50%;
  overflow: hidden;
}
.user-info .user-icon image {
  width: 120rpx;
  height: 120rpx;
}
.user-info .login-info {
  flex: 1;
  padding: 20rpx;
}
.user-info .login-info .login-or-name {
  font-size: 32rpx;
}
.user-info .login-info .user-phone-box {
  margin-top: 10rpx;
  font-weight: 100;
  font-size: 28rpx;
  height: 36rpx;
  line-height: 28rpx;
}
.user-info .login-info .user-phone-box view {
  display: inline-block;
}
.user-info .login-info .user-phone-box image {
  width: 24rpx;
  height: 36rpx;
  vertical-align: top;
  margin-right: 10rpx;
}
.user-info .user-detail {
  width: 40rpx;
  height: 120rpx;
  line-height: 120rpx;
  text-align: center;
  font-family: "宋体";
  font-weight: 700;
}
.user-info .user-detail text {
  display: block;
  width: 40rpx;
}

