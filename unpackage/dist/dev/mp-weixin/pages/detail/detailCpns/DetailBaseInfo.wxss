.detail-base-info {
  font-size: 24rpx;
  color: #666;
  padding: 30rpx 20rpx;
  border-bottom: 6rpx solid #f2f5f8;
}
.detail-base-info .info-title {
  color: #333;
  font-size: 28rpx;
  line-height: 40rpx;
}
.detail-base-info .info-price {
  display: flex;
  align-items: flex-end;
  margin: 20rpx 0;
}
.detail-base-info .info-price .n-price {
  margin-right: 10rpx;
  font-size: 40rpx;
  color: #FF8198;
}
.detail-base-info .info-price .o-price {
  margin-right: 10rpx;
  font-size: 24rpx;
  text-decoration: line-through;
  color: #999999;
}
.detail-base-info .info-price .discount {
  border-radius: 10rpx;
  padding: 4rpx 10rpx;
  color: #fff;
  height: 30rpx;
  position: relative;
  bottom: 10rpx;
}
.detail-base-info .info-other {
  display: flex;
  justify-content: space-between;
  color: #999999;
  padding: 10rpx 0;
  border-bottom: 2rpx solid #f2f5f8;
}
.detail-base-info .info-service {
  display: flex;
  justify-content: space-between;
  padding: 40rpx 0 0;
}
.detail-base-info .info-service image {
  width: 20rpx;
  height: 20rpx;
}

