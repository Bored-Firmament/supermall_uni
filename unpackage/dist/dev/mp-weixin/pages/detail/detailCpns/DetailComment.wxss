.detail-comment {
  color: #333;
  border-bottom: 6rpx solid #f2f5f8;
}
.detail-comment .comment-header {
  padding: 0 20rpx;
  display: flex;
  justify-content: space-between;
  height: 100rpx;
  line-height: 100rpx;
  vertical-align: top;
  border-bottom: 2rpx solid #f2f5f8;
}
.detail-comment .comment-header .comment-header text {
  display: inline-block;
  height: 100%;
}
.detail-comment .comment-header .comment-header text:first-child {
  vertical-align: top;
}
.detail-comment .comment-header .comment-header text:last-child {
  width: 30rpx;
}
.detail-comment .comment-box {
  padding: 20rpx;
}
.detail-comment .comment-box .comment-user image {
  border-radius: 50%;
  width: 80rpx;
  height: 80rpx;
  vertical-align: top;
  margin-right: 20rpx;
}
.detail-comment .comment-box .comment-user text {
  line-height: 80rpx;
}
.detail-comment .comment-box .comment-info {
  padding-top: 20rpx;
}
.detail-comment .comment-box .comment-info .comment-desc {
  font-size: 12px;
  color: #666;
  line-height: 40rpx;
}
.detail-comment .comment-box .comment-info .comment-goods {
  font-size: 24rpx;
  color: #999;
  line-height: 60rpx;
}
.detail-comment .comment-box .comment-info .comment-goods text:first-child {
  margin-right: 20rpx;
}

