.detail-shop-info {
  font-size: 24rpx;
  color: #666;
  padding: 40rpx 20rpx;
  border-bottom: 6rpx solid #f2f5f8;
}
.detail-shop-info .shop-logo {
  display: flex;
}
.detail-shop-info .shop-logo image {
  width: 80rpx;
  height: 80rpx;
  margin-right: 20rpx;
}
.detail-shop-info .shop-logo text {
  line-height: 80rpx;
}
.detail-shop-info .shop-message {
  display: flex;
  text-align: center;
  margin: 20rpx 0;
  line-height: 40rpx;
}
.detail-shop-info .shop-message .shop-m-left {
  flex: 1;
  display: flex;
  margin: 32rpx 0;
  border-right: 2rpx solid #f2f5f8;
}
.detail-shop-info .shop-message .shop-m-left .info-sells, .detail-shop-info .shop-message .shop-m-left .info-count {
  flex: 1;
  display: flex;
  flex-direction: column;
}
.detail-shop-info .shop-message .shop-m-left .info-sells .info-value, .detail-shop-info .shop-message .shop-m-left .info-count .info-value {
  font-size: 32rpx;
}
.detail-shop-info .shop-message .shop-m-right {
  flex: 1;
  display: flex;
  flex-direction: column;
  justify-content: center;
}
.detail-shop-info .shop-message .shop-m-right .s-m-r-item {
  margin-left: 40rpx;
  display: flex;
}
.detail-shop-info .shop-message .shop-m-right .s-m-r-item view {
  text-align: left;
  font-size: 24rpx;
  padding-right: 20rpx;
}
.detail-shop-info .shop-message .shop-m-right .s-m-r-item .score {
  color: #5ea732;
  width: 60rpx;
}
.detail-shop-info .shop-message .shop-m-right .s-m-r-item .score-text text {
  background-color: #5ea732;
  color: #fff;
}
.detail-shop-info .shop-message .shop-m-right .s-m-r-item .score-better {
  color: #f13e3a;
}
.detail-shop-info .shop-message .shop-m-right .s-m-r-item .score-text-better text {
  background-color: #f13e3a;
}
.detail-shop-info .shop-button {
  text-align: center;
}
.detail-shop-info .shop-button .enter-shop {
  display: block;
  background-color: #f2f5f8;
  width: 240rpx;
  height: 50rpx;
  line-height: 50rpx;
  border-radius: 20rpx;
  margin: auto;
}

